@{
    Layout = "_Layout";
}
@if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
{
    <nav class="navbar navbar-light bg-light justify-content-between" style="padding:15px">
        <form asp-controller="Account" asp-action="Logout" id="logoutform" asp-antiforgery="true">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">   В начало</a>
            <a class="navbar-brand" asp-action="Index" asp-controller="Roles">Список пользователей</a>
            <a class="navbar-brand" asp-action="Personal" asp-controller="Home">@User.Identity.Name</a>
            <a class="navbar-brand" href="#" onclick="document.getElementById('logoutform').submit()">Выход</a>
        </form>
        <form class="d-flex justify-content-around form-inline my-2 my-lg-0" method="post">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Поиск</button>
        </form>
    </nav>
    <p></p>
}
